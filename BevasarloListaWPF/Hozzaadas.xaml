<Window x:Class="BevasarloListaWPF.Hozzaadas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BevasarloListaWPF"
        mc:Ignorable="d"
        Title="Hozzaadas" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content="Termék:" VerticalAlignment="Center" Margin="10" Grid.Row="0"></Label>
        <TextBox x:Name="Name" Grid.Row="0" HorizontalAlignment="Right" Margin="15" Width="200" VerticalContentAlignment="Center"></TextBox>
        <Label Content="Mennyiség:" VerticalAlignment="Center" Margin="10" Grid.Row="1"></Label>
        <TextBox x:Name="Quantity" Grid.Row="1" HorizontalAlignment="Right" Margin="15" Width="200" VerticalContentAlignment="Center"></TextBox>
        <Label Content="Egységár:" VerticalAlignment="Center" Margin="10" Grid.Row="2"></Label>
        <TextBox x:Name="Price" Grid.Row="2" HorizontalAlignment="Right" Margin="15" Width="200" VerticalContentAlignment="Center"></TextBox>
        <Label Content="Típus:" VerticalAlignment="Center" Margin="10" Grid.Row="3"></Label>
        <ComboBox x:Name="Type_" Grid.Row="3" HorizontalAlignment="Right" Width="200" Margin="15">
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
            <ComboBoxItem Content="D"/>
        </ComboBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="right" Margin="10" Grid.Row="4">
            <Button Content="OK" Width="100" Height="50" Margin="5" Click="Ok_Click"></Button>
            <Button Content="Mégse" Width="100" Height="50" Margin="5" Click="No_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
