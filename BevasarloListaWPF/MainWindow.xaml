<Window x:Class="BevasarloListaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BevasarloListaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="249*"/>
            <RowDefinition Height="185*"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dataGrid"></DataGrid>
        <GroupBox Grid.Row="1">
            <ScrollViewer>
                <WrapPanel >
                    <GroupBox Header="Termékek" Margin="10">
                        <Button Content="Hozzáadás" Margin=" 10"></Button>
                    </GroupBox>
                </WrapPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
